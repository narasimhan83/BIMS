@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-background">
    <div class="login-card register-card">
        <div class="login-header">
            <img src="~/images/aegis-logo.png" alt="AEGIS Logo" class="login-logo" />
            <h1 class="login-title">Create Account</h1>
            <p class="login-subtitle">Join AEGIS IBMS today</p>
        </div>

        <form asp-action="Register" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
            
            <div class="form-group">
                <label asp-for="FullName" class="form-label">
                    <i class="icon-user"></i>
                    Full Name
                </label>
                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" autofocus />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName" class="form-label">
                    <i class="icon-user"></i>
                    Username
                </label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="icon-lock"></i>
                    Password
                </label>
                <input asp-for="Password" class="form-control" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="icon-lock"></i>
                    Confirm Password
                </label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">
                <span class="btn-text">Create Account</span>
                <span class="btn-icon">â†’</span>
            </button>
        </form>

        <div class="login-footer">
            <p>Already have an account? <a asp-action="Login" class="register-link">Sign in here</a></p>
        </div>
    </div>

    <div class="background-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}