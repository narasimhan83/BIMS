@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-background">
    <div class="login-card">
        <div class="login-header">
            <img src="~/images/aegis-logo.png" alt="AEGIS Logo" class="login-logo" />
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to continue to AEGIS IBMS</p>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
            
            <div class="form-group">
                <label asp-for="UserName" class="form-label">
                    <i class="icon-user"></i>
                    Username
                </label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" autofocus />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="icon-lock"></i>
                    Password
                </label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                    <label asp-for="RememberMe" for="RememberMe">Remember me</label>
                </div>
            </div>

            <button type="submit" class="btn-login">
                <span class="btn-text">Sign In</span>
                <span class="btn-icon">â†’</span>
            </button>
        </form>

        <div class="login-footer">
            <p>Don't have an account? <a asp-action="Register" class="register-link">Register here</a></p>
        </div>
    </div>

    <div class="background-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}