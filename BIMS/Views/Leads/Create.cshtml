@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            let selectedCustomerId = null;

            // Search customers
            $('#searchBtn').click(function() {
                performSearch();
            });

            $('#customerSearch').keypress(function(e) {
                if (e.which == 13) { // Enter key
                    performSearch();
                }
            });

            function performSearch() {
                const query = $('#customerSearch').val().trim();
                const searchType = $('#searchType').val();

                if (!query) {
                    alert('@(currentLang == "ar" ? "ÙŠØ±Ø¬Ù‰ Ø¥Ø¯Ø®Ø§Ù„ Ù†Øµ Ø§Ù„Ø¨Ø­Ø«" : "Please enter search text")');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("SearchCustomers", "Leads")',
                    type: 'GET',
                    data: { query: query, searchType: searchType },
                    success: function(response) {
                        if (response.success) {
                            displaySearchResults(response.customers);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('@(currentLang == "ar" ? "Ø­Ø¯Ø« Ø®Ø·Ø£ ÙÙŠ Ø§Ù„Ø¨Ø­Ø«" : "Search error occurred")');
                    }
                });
            }

            function displaySearchResults(customers) {
                const resultsList = $('#resultsList');
                resultsList.empty();

                if (customers.length === 0) {
                    resultsList.html('<div class="no-results">@(currentLang == "ar" ? "Ù„Ø§ ØªÙˆØ¬Ø¯ Ù†ØªØ§Ø¦Ø¬" : "No results found")</div>');
                } else {
                    customers.forEach(function(customer) {
                        const customerHtml = `
                            <div class="customer-result" data-customer-id="${customer.id}">
                                <div class="customer-info">
                                    <strong>${customer.name || customer.nameAr}</strong>
                                    <small>
                                        ${customer.phone ? '@(currentLang == "ar" ? "Ø§Ù„Ù‡Ø§ØªÙ:" : "Phone:") ' + customer.phone : ''}
                                        ${customer.cpr ? '| @(currentLang == "ar" ? "Ø§Ù„Ø³Ø¬Ù„ Ø§Ù„Ù…Ø¯Ù†ÙŠ:" : "CPR:") ' + customer.cpr : ''}
                                        ${customer.agentName ? '| @(currentLang == "ar" ? "Ø§Ù„ÙˆÙƒÙŠÙ„:" : "Agent:") ' + customer.agentName : ''}
                                    </small>
                                </div>
                                <button type="button" class="btn-select-customer" data-customer-id="${customer.id}">
                                    @(currentLang == "ar" ? "Ø§Ø®ØªÙŠØ§Ø±" : "Select")
                                </button>
                            </div>
                        `;
                        resultsList.append(customerHtml);
                    });
                }

                $('#searchResults').show();
            }

            // Select customer
            $(document).on('click', '.btn-select-customer', function() {
                const customerId = $(this).data('customer-id');
                selectCustomer(customerId);
            });

            function selectCustomer(customerId) {
                $.ajax({
                    url: '@Url.Action("GetCustomerDetails", "Leads")',
                    type: 'GET',
                    data: { customerId: customerId },
                    success: function(response) {
                        if (response.success) {
                            const customer = response.customer;
                            selectedCustomerId = customer.id;

                            $('#selectedCustomerId').val(customer.id);

                            // Display detailed customer information
                            $('#customerNameDisplay').text(customer.customerName || customer.customerNameAr || 'N/A');
                            $('#customerCPRDisplay').text(customer.cpr_CR_Number || 'N/A');
                            $('#customerPhoneDisplay').text(customer.mobilePhone || 'N/A');
                            $('#customerEmailDisplay').text(customer.email || 'N/A');
                            $('#customerGroupDisplay').text(customer.customerGroup?.nameEn || 'N/A');
                            $('#customerAgentDisplay').text(customer.agentName || 'N/A');
                            $('#customerCompanyDisplay').text('N/A');

                            $('#searchResults').hide();
                            $('#selectedCustomerDetails').show();

                            // Enable submit button
                            $('#submitBtn').prop('disabled', false);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('@(currentLang == "ar" ? "Ø­Ø¯Ø« Ø®Ø·Ø£ ÙÙŠ ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø¹Ù…ÙŠÙ„" : "Error loading customer details")');
                    }
                });
            }

            // Change customer
            $('#changeCustomerBtn').click(function() {
                selectedCustomerId = null;
                $('#selectedCustomerId').val('');
                $('#selectedCustomerDetails').hide();
                $('#searchResults').hide();
