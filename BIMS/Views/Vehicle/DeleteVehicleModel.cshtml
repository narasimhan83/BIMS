@model BIMS.Models.VehicleModel
@{ ViewData["Title"] = "Delete Vehicle Model"; }

<div class="form-container">
    <div class="form-header">
        <h1><i class="icon">üóëÔ∏è</i> Delete Vehicle Model</h1>
        <a asp-action="VehicleModels" class="btn-back">‚Üê Back to List</a>
    </div>
    <div class="delete-card">
        <div class="delete-warning">
            <span class="warning-icon">‚ö†Ô∏è</span>
            <h3>Are you sure you want to delete this vehicle model?</h3>
            <p>This action cannot be undone.</p>
        </div>
        <div class="details-section">
            <dl class="details-list">
                <dt>Vehicle Make:</dt><dd><strong>@(Model.VehicleMake?.MakeName)</strong></dd>
                <dt>Model Name (English):</dt><dd><strong>@Model.ModelName</strong></dd>
                @if (!string.IsNullOrEmpty(Model.ModelNameAr)) { <dt>ÿßÿ≥ŸÖ ÿßŸÑŸÖŸàÿØŸäŸÑ (ÿπÿ±ÿ®Ÿä):</dt><dd><strong>@Model.ModelNameAr</strong></dd> }
                <dt>Code:</dt><dd>@(Model.Code ?? "-")</dd>
                <dt>Status:</dt><dd>@if (Model.IsActive) { <span class="badge badge-success">Active</span> } else { <span class="badge badge-danger">Inactive</span> }</dd>
                <dt>Created Date:</dt><dd>@Model.CreatedDate.ToLocalTime().ToString("dd MMMM yyyy, HH:mm")</dd>
            </dl>
        </div>
        <form asp-action="DeleteVehicleModel" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <button type="submit" class="btn-delete-confirm"><span>üóëÔ∏è</span> Yes, Delete</button>
                <a asp-action="VehicleModels" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    .form-container { padding: 20px; max-width: 700px; margin: 0 auto; }
    .form-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
    .form-header h1 { font-size: 28px; color: #dc3545; display: flex; align-items: center; gap: 10px; }
    .btn-back { padding: 10px 20px; background: #6c757d; color: white; border-radius: 8px; text-decoration: none; transition: all 0.3s ease; }
    .btn-back:hover { background: #5a6268; transform: translateX(-3px); }
    .delete-card { background: white; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); overflow: hidden; }
    .delete-warning { background: linear-gradient(135deg, #dc3545, #c82333); color: white; padding: 30px; text-align: center; }
    .warning-icon { font-size: 48px; display: block; margin-bottom: 15px; }
    .delete-warning h3 { font-size: 20px; margin-bottom: 10px; }
    .delete-warning p { opacity: 0.9; }
    .details-section { padding: 30px; }
    .details-list { display: grid; grid-template-columns: 180px 1fr; gap: 15px; }
    .details-list dt { font-weight: 600; color: var(--navy-dark); }
    .details-list dd { color: #666; margin: 0; }
    .badge { padding: 5px 12px; border-radius: 12px; font-size: 12px; font-weight: 600; display: inline-block; }
    .badge-success { background: #28a745; color: white; }
    .badge-danger { background: #dc3545; color: white; }
    .form-actions { display: flex; gap: 15px; padding: 20px 30px 30px; }
    .btn-delete-confirm { flex: 1; padding: 14px 24px; background: linear-gradient(135deg, #dc3545, #c82333); color: white; border: none; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px; transition: all 0.3s ease; }
    .btn-delete-confirm:hover { transform: translateY(-2px); box-shadow: 0 6px 15px rgba(220, 53, 69, 0.3); }
    .btn-cancel { padding: 14px 24px; background: #6c757d; color: white; border-radius: 8px; text-decoration: none; font-weight: 600; transition: all 0.3s ease; text-align: center; }
    .btn-cancel:hover { background: #5a6268; }
</style>