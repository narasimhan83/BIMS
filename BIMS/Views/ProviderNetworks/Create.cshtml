                </div>

                <!-- Is Active -->
                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input asp-for="IsActive" type="checkbox" checked />
                        <span>@(currentLang == "ar" ? "ŸÜÿ¥ÿ∑" : "Active")</span>
                    </label>
