                return;
            }

            $.get('/InsuranceClients/GetStatesByCountry', { countryId: countryId })
                .done(function (data) {
                    let options = '<option value="">@(currentLang == "ar" ? "ÿßÿÆÿ™ÿ± ÿßŸÑŸàŸÑÿßŸäÿ©" : "Select State")</option>';
                    data.forEach(function (state) {
                        options += `<option value="${state.id}">${state.name}</option>`;
